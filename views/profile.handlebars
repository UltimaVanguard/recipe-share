<div class="container center">
    <div class="main">
        <div>
            <h1>{{user.username}}'s Catalog</h1>
        </div>
        <div class="buttons">
            <div class="button-recipe">
                <a href="/newRecipe">+ New recipe</a>
            </div>
        </div>       
    </div>
    <hr>
    {{!-- creates a card for each recipe --}}
    <section class="card">
        {{#each user.recipes as |recipe|}}
            <h3><a href="/recipes/{{recipe.id}}">{{recipe.name}}</a><h3>
            <img src="{{recipe.image}}">
            <p>{{recipe.description}}</p>
            <hr>
        {{/each}} 
    </section>
</div>